generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model DailyLog {
  id               String   @id @default(cuid())
  date             DateTime @unique
  studyHours       Float
  programmingHours Float
  fajr             Boolean
  dhuhr            Boolean
  asr              Boolean
  maghrib          Boolean
  isha             Boolean
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([date])
}
